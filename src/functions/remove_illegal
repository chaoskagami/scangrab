# not FAT-legal.

remove_illegal() {

	sed \
		-e "s/|/-/g" \
		-e "s|/|-|g" \
		-e "s|?|ï¼Ÿ|g" \
		-e "s|<|(|g" \
		-e "s|>|)|g"

}
